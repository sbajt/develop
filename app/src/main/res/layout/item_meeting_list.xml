<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/timeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="-12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="28sp"
        tools:text="10:00 - 11:00" />

    <TextView
        android:id="@+id/meetingNameView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeView"
        android:layout_marginBottom="-12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textFontWeight="700"
        android:textSize="34sp"
        tools:text="Meeting name" />

    <TextView
        android:id="@+id/meetingDescriptionView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/meetingNameView"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="14sp"
        tools:text="This is a description. Very accurate. Much words. Such room." />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/meetingDescriptionView"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/label_creator_label"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/meetingOrganizerView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:minWidth="300dp"
                android:textFontWeight="700"
                android:textSize="16sp"
                tools:ignore="MissingPrefix"
                tools:text="marijan.martinovic@superology.com" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:gravity="bottom|start"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_attendees" />

            <TextView
                android:id="@+id/invitesCountView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginBottom="-4dp"
                android:textSize="26sp"
                tools:text="6" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>